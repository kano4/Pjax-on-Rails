%h1 Posts
%table{:class => "table table-striped"}
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.post.name", :default => t("activerecord.labels.name", :default => "Name"))
      %th Created at
      %th Actions
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.id
        %td= link_to post.name, post_path(post)
        %td= post.created_at
        %td
          = link_to "Show", post_path(post)
          = link_to "Edit", edit_post_path(post)
          = link_to "Destroy", post_path(post), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"

= link_to "New", new_post_path, :class => 'btn btn-primary'
